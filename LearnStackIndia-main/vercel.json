{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build" 
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/",
      "dest": "/frontend/auth.html"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
